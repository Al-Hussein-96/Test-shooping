<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_weight="1"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_subcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_category"
        android:backgroundTint="@color/blue"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_view_comfy_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/sub_category"
        app:layout_constraintBottom_toBottomOf="@+id/icon_subcategory"
        app:layout_constraintStart_toEndOf="@id/icon_subcategory"
        app:layout_constraintTop_toTopOf="@+id/icon_subcategory" />

</androidx.constraintlayout.widget.ConstraintLayout>